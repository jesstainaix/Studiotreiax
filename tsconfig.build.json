{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "noEmitOnError": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "exactOptionalPropertyTypes": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noUncheckedIndexedAccess": false
  },
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "src/test/**",
    "tests/**",
    "playwright/**",
    "node_modules",
    "dist"
  ]
}