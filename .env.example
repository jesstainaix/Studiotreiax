# API Configuration
PORT=3001
NODE_ENV=development

# Frontend Configuration
VITE_API_URL=http://localhost:3001

# AI API Keys (Required for AI features)
# Get your API keys from:
# OpenAI: https://platform.openai.com/api-keys
# Anthropic: https://console.anthropic.com/
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Database Configuration (Optional)
DATABASE_URL=postgresql://localhost:5432/performance_optimization

# Cache Configuration
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
# Performance Monitoring Configuration
# Set to false to disable all performance monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
# Log levels: error (only errors), warn (errors + warnings), info (all logs)
VITE_PERFORMANCE_LOG_LEVEL=error

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5000

# Session Configuration
SESSION_SECRET=generate-a-secure-random-string-here

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100